<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/prof_iv_in"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/username_tv_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/prof_iv_in"
            android:layout_toRightOf="@+id/prof_iv_in" />

        <ImageView
            android:id="@+id/image_iv_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/prof_iv_in"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/caption_tv_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_iv_in" />
    </RelativeLayout>
</android.support.v7.widget.CardView>